<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      href="/images/136528085_4b7be0fd-aa0b-4383-9f5f-95eb098746c2.svg"
      type="image/svg+xml"
    />
    <link rel="stylesheet" href="/stylesheets/edit.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Edit Profile - Auth</title>
  </head>
  <body class="min-h-screen flex items-center justify-center p-4 relative">
    <!-- Floating Background Shapes -->
    <div class="floating-shapes">
      <div class="shape"></div>
      <div class="shape"></div>
      <div class="shape"></div>
      <div class="shape"></div>
    </div>

    <div class="w-full max-w-2xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-8 slide-up">
        <h1 class="text-4xl lg:text-5xl font-black text-white mb-4">
          <span
            class="bg-gradient-to-r from-purple-400 via-pink-400 to-purple-600 bg-clip-text text-transparent"
          >
            Auth</span
          >
        </h1>
        <p class="text-xl text-purple-200 font-light">Edit Your Profile</p>
      </div>

      <!-- Main Form Container -->
      <div class="edit-form-container rounded-3xl p-8 slide-up">
        <!-- Avatar -->
        <div class="avatar-container">
          <div class="avatar"><%= user.name.charAt(0).toUpperCase() %></div>
        </div>

        <!-- Progress Steps -->
        <div class="progress-steps">
          <div class="step active">1</div>
          <div class="step-connector"></div>
          <div class="step active">2</div>
          <div class="step-connector"></div>
          <div class="step active">3</div>
        </div>

        <!-- Security Badge -->
        <div class="text-center">
          <div class="security-badge">
            <svg
              class="w-4 h-4 text-green-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
              ></path>
            </svg>
            <span class="text-green-400 text-sm font-medium"
              >Secure Update</span
            >
          </div>
        </div>

        <!-- Form -->
        <form
          action="/edit/<%= user._id%>"
          method="post"
          class="space-y-6 fade-in"
        >
          <!-- Personal Information Section -->
          <div class="form-section">
            <h3 class="section-title">
              <svg
                class="w-5 h-5 text-purple-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                ></path>
              </svg>
              Personal Information
            </h3>

            <div class="input-container">
              <input
                id="username"
                type="text"
                name="username"
                value="<%= user.name%>"
                placeholder=" "
                required
                class="form-input"
              />
              <label for="username">Full Name</label>
            </div>

            <div class="input-container">
              <input
                id="age"
                type="number"
                name="age"
                value="<%= user.age%>"
                placeholder=" "
                required
                min="1"
                max="120"
                class="form-input"
              />
              <label for="age">Age</label>
            </div>
          </div>

          <!-- Account Information Section -->
          <div class="form-section">
            <h3 class="section-title">
              <svg
                class="w-5 h-5 text-purple-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              Account Information
            </h3>

            <div class="input-container">
              <input
                id="email"
                type="email"
                name="email"
                value="<%= user.email%>"
                placeholder=" "
                required
                class="form-input"
              />
              <label for="email">Email Address</label>
            </div>
          </div>

          <!-- Security Section -->
          <div class="form-section">
            <h3 class="section-title">
              <svg
                class="w-5 h-5 text-purple-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                ></path>
              </svg>
              Security
            </h3>

            <div class="input-container">
              <input
                id="password"
                type="password"
                name="password"
                placeholder=" "
                required
                minlength="6"
                class="form-input"
              />
              <label for="password">New Password</label>
              <button
                type="button"
                class="password-toggle"
                onclick="togglePassword()"
              >
                <svg
                  id="eye-icon"
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                  ></path>
                </svg>
              </button>
            </div>

            <p class="text-purple-300 text-sm mt-2">
              <svg
                class="w-4 h-4 inline mr-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              Password must be at least 6 characters long
            </p>
          </div>

          <!-- Action Buttons -->
          <div class="space-y-4 pt-4">
            <button type="submit" class="btn-primary">
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                ></path>
              </svg>
              Update Profile
            </button>

            <div class="text-center">
              <a href="/login" class="btn-secondary">
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 19l-7-7m0 0l7-7m-7 7h18"
                  ></path>
                </svg>
                Back to Profile
              </a>
            </div>
          </div>
        </form>
      </div>
    </div>

    <script src="/javascripts/edit.js"></script>
  </body>
</html>
