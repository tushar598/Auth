<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/136528085_4b7be0fd-aa0b-4383-9f5f-95eb098746c2.svg" type="image/svg+xml">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <title>Profile - Auth</title>
  </head>
  <body class="min-h-screen flex items-center justify-center p-4 relative">
    <!-- Floating Background Shapes -->
    <div class="floating-shapes">
      <div class="shape"></div>
      <div class="shape"></div>
      <div class="shape"></div>
      <div class="shape"></div>
      <div class="shape"></div>
      <div class="shape"></div>
      <div class="shape"></div>
      <div class="shape"></div>
      <div class="shape"></div>
    </div>

    <div class="w-full max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12 slide-up">
        <div class="logo-glow">
          <h1 class="text-4xl lg:text-5xl font-black text-white mb-4">
            <span
              class="bg-gradient-to-r from-purple-400 via-pink-400 to-purple-600 bg-clip-text text-transparent"
            >
              Auth </span
            >
          </h1>
          <p class="text-xl text-purple-200 font-light">User Profile</p>
        </div>
      </div>

      <div class="grid lg:grid-cols-3 gap-8 items-start">
        <!-- Profile Card -->
        <div class="lg:col-span-2">
          <div class="profile-card rounded-3xl p-8 slide-up">
            <!-- Avatar -->
            <div class="avatar-container">
              <div class="avatar"><%= user.name.charAt(0).toUpperCase() %></div>
            </div>

            <!-- Profile Fields -->
            <div class="space-y-6">
              <div class="field-container">
                <label class="field-label">Full Name</label>
                <div class="field-value"><%= user.name %></div>
              </div>

              <div class="field-container">
                <label class="field-label">Email Address</label>
                <div class="field-value"><%= user.email %></div>
              </div>

              <div class="field-container">
                <label class="field-label">Age</label>
                <div class="field-value"><%= user.age %> years old</div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
              <a href="/edit/<%= user._id%>" class="btn-success">
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                  ></path>
                </svg>
                Edit Profile
              </a>

              <a
                href="/delete/<%= user._id%>"
                class="btn-danger"
                onclick="return confirm('Are you sure you want to delete your account? This action cannot be undone.')"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                  ></path>
                </svg>
                Delete Account
              </a>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6 fade-in">
          <!-- Stats Cards -->
          <div class="glass-effect rounded-3xl p-6">
            <h3 class="text-xl font-bold text-white mb-4 text-center">
              Account Stats
            </h3>
            <div class="stats-container">
              <div class="stat-card">
                <span class="stat-number">1</span>
                <span class="stat-label">Profile</span>
              </div>
              <div class="stat-card">
                <span class="stat-number">âœ“</span>
                <span class="stat-label">Verified</span>
              </div>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="glass-effect rounded-3xl p-6">
            <h3 class="text-xl font-bold text-white mb-4 text-center">
              Quick Actions
            </h3>
            <div class="space-y-4">
              <a href="#" class="btn-secondary w-full">
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                  ></path>
                </svg>
                Switch-Account
              </a>

              <a href="#" class="btn-secondary w-full">
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 5a2 2 0 012-2h4a2 2 0 012 2v0H8v0z"
                  ></path>
                </svg>
                Dashboard
              </a>

              <a href="/logout" class="btn-primary w-full">
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                  ></path>
                </svg>
                Logout
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
